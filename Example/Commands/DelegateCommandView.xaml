<UserControl x:Class="Example.DelegateCommandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:example="clr-namespace:Example"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance example:DelegateCommandViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding LowerCommand}" Content="Lower" />
        <TextBlock Margin="20,0"
                   VerticalAlignment="Center"
                   Text="{Binding Value}" />
        <Button Command="{Binding HigherCommand}" Content="Higher" />
    </StackPanel>

</UserControl>
